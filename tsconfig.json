{
  "compilerOptions": {
    "moduleResolution": "node",
    "strict": true,
    "target": "es2020",
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "jsx": "react",
    "noImplicitAny": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "paths": {
      "@lib/*": ["lib/nodejs/*"]
    }
  },
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    "_warmup/**/*",
    ".vscode/**/*",
    "*.config.js",
    "**/*.js",
    "**/cdk.out/**/*"
  ]
}
